@model StatauIrPristatau.Models.Parcel

@{
    int orderId = (int)ViewData["Message"];
    @Html.AntiForgeryToken()
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Statau ir pristatau</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>

<body>
    <div style="width: 100%">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #c0392b">
            <a class="navbar-brand" href="#">Statau ir pristatau</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav" style="margin-left: auto">
                    <li class="nav-item">
                        @Html.ActionLink("Naudotojų sąrašas", "ToMainView", "MainAdmin", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Užsakymų istorija", "openOrderHistory", "MainUser", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Vykdomi užsakymai", "openOrderedShipments", "Customer", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Žemėlapis", "openMap", "Customer", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Atsijungti</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container mt-5">
        <div>
            <h3>Pridėti siuntą</h3>
        </div>

        @using (Html.BeginForm("fillOrderData", "Customer", new { id = orderId }, FormMethod.Post, null))
        {
            <div>
                <div class="container h-100">
                    <div class="card mt-4 mb-5" id="registration_form" style="width: 60%; margin-left: 20%; margin-right: 20%; border: 0;  border-radius: 5px;">
                        <div class="card-body" style="background-color: #ffb3b3;  border-radius: 0 0 5px 5px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Pickup_Address, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Pickup_Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Paėmimo adresas" } })
                                    @Html.ValidationMessageFor(model => model.Pickup_Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DeliveryAddress, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.DeliveryAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Pristatymo adresas" } })
                                    @Html.ValidationMessageFor(model => model.DeliveryAddress, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Width, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Width, new { htmlAttributes = new { @class = "form-control", placeholder = "Plotis" } })
                                    @Html.ValidationMessageFor(model => model.Width, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Height, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", placeholder = "Aukštis" } })
                                    @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Length, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control", placeholder = "Ilgis" } })
                                    @Html.ValidationMessageFor(model => model.Length, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Weigth, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Weigth, new { htmlAttributes = new { @class = "form-control", placeholder = "Svoris" } })
                                    @Html.ValidationMessageFor(model => model.Weigth, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Scattering, htmlAttributes: new { })
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.CheckBoxFor(model => model.Scattering, null)
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <button type="submit" class="btn" style="background-color: #c0392b; color: white;">Pridėti siuntą</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
</body>

